<div class="inner-body">
  <div class="posts col-md-5 col-md-offset-3">
    <% @posts.each do | post |%>
      <div class="post-div">
      <br>
        <div class="post-header-home">
          <span class="post-author vcard">
            <i class="fa fa-user"></i>
            <span class="fn"> <%= post.user.full_name %></span>
          </span>
        </div>
        <div class= 'post-content'> 
          <p> <%= post.text %></p>
        </div>
        <div class="post-header-label">
          <span class="post-timestamp">
          <i> <%= post.date %></i>
          <ul class="pull-right">
            <li><%= link_to 'Edit', edit_post_path(post) %></li>
            <li><%= link_to 'Delete', post_path(post), method: :delete %></li>
          </ul>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>